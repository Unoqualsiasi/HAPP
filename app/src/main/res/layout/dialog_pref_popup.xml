<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundLight"
    style="@style/Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/sysPrefPopupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/misc_placeholder"
            style="@style/TitlePrimary"/>
        <TextView
            android:id="@+id/sysPrefPopupDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/misc_placeholder"
            style="@style/TitleSubtext"/>
    </LinearLayout>
    <TextView
        android:id="@+id/sysPrefPopupSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/misc_placeholder"
        style="@style/SubtextDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sysPrefSysProfiles"
            style="@style/TitleSecondaryDark"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:spinnerMode="dialog">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sysPrefCompareValue"
            android:layout_gravity="center"
            android:text="@string/misc_placeholder"
            style="@style/TitleSecondaryDark"
            android:paddingEnd="0dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider"
        tools:ignore="ContentDescription" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sysPrefText"
        android:inputType="text"
        tools:ignore="LabelFor" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sysPrefItems">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sysPrefCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@android:string/cancel"/>
        <Button
            android:id="@+id/sysPrefSave"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:layout_toStartOf="@id/sysPrefCancel"/>
    </RelativeLayout>

</LinearLayout>